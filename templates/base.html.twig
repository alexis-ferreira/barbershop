<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/fontawesome/all.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/base.css') }}">
        <link rel="stylesheet" href="{{ asset('css/home.css') }}">
    {% endblock %}

    {% block javascripts %}
        <script src="{{ asset('js/bootstrap/bootstrap.min.js') }}"></script>
        <script src="{{ asset('js/fontawesome/all.min.js') }}"></script>
    {% endblock %}
</head>
<body>

<section id="header" class="col-md-12 mx-auto">
    <div class="header-container d-flex col-md-10 mx-auto justify-content-between">
        <div class="logo col-md-3">
            <div class="logo-background" style="background: url('{{ asset('images/logo.png') }}')"></div>
        </div>
        <div class="navbar col-md-6">
            <ul class="d-flex justify-content-around nav col-md-12 px-4">
                <li class="homepage text-uppercase">Accueil</li>
                <li class="salon text-uppercase">Le salon</li>
                <li class="prestation text-uppercase">Prestations</li>
                <li class="realisation text-uppercase">Réalisations</li>
                <li class="contact text-uppercase">Contact</li>
            </ul>
        </div>
        <div class="social-network d-flex col-md-3 justify-content-end align-items-center">
            <div class="social-network-contact d-flex me-3">
                <a href="https://facebook.fr/" target="_blank" class="facebook me-3 btn p-1">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a href="https://instagram.fr/" target="_blank" class="instagram btn p-1 me-2">
                    <i class="fab fa-instagram"></i>
                </a>
            </div>
            <a href="#" class="booking-btn btn btn-primary">
                Se connecter
            </a>
        </div>
    </div>
</section>

{% block body %}{% endblock %}

<section id="footer-container">
    <div class="footer-contact col-md-12 py-4" style="background-image: url('{{ asset('images/footer.jpg') }}'); background-size: cover; background-position: center">
        <div class="contact-container d-flex justify-content-between col-md-7 my-4 px-5 mx-auto">
            <div class="about-contact text-light ms-4 my-5 col-md-4 pe-4">
                <div class="contact-title h3 fw-bold">
                    <p>Horaires</p>
                </div>
                <div class="contact-opening d-flex justify-content-between">
                    <div class="contact-opening-day">
                        <ul class="list ps-0">
                            <li>Lundi</li>
                            <li>Mardi</li>
                            <li>Mercredi</li>
                            <li>Jeudi</li>
                            <li>Vendredi</li>
                            <li>Samedi</li>
                            <li>Dimanche</li>
                        </ul>
                    </div>
                    <div class="contact-opening-hours">
                        <ul class="contact- ps-0">
                            <li>Fermé</li>
                            <li>14h00 - 19h00</li>
                            <li>10h00 - 19h00</li>
                            <li>10h00 - 19h00</li>
                            <li>10h00 - 19h00</li>
                            <li>10h00 - 19h00</li>
                            <li>Fermé</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="contact-location text-light me-4 my-5">
                <div class="contact-location-title h3 fw-bold">
                    <p>Coordonnées</p>
                </div>
                <div class="contact-location-adress">
                    <ul class="list ps-0">
                        <li>12 Rue Thierry Verdier</li>
                        <li>75000 Paris</li>
                        <li>01 49 38 57 39</li>
                        <li>barbershop@gmail.com</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="footer-menu-container bg-primary">
        <div class="footer-menu d-flex justify-content-between align-items-center col-md-8 py-4 mx-auto">
            <div class="menu text-light">
                <p class="text-dark h2">Menu</p>
                <ul class="list ps-0">
                    <li>Accueil</li>
                    <li>Le salon</li>
                    <li>Préstations</li>
                    <li>Réalisations</li>
                    <li>Contact</li>
                </ul>
            </div>
            <div class="logo">
                <a href="#">
                    <img src="{{ asset('images/logo.png') }}" alt="Logo Barbershop." width="200px">
                </a>
            </div>
            <div class="location text-light">
                <p class="text-dark h2">Coordonées</p>
                <ul class="list ps-0">
                    <li>12 Rue Thierry Verdier</li>
                    <li>75000 Paris</li>
                    <li>01 49 38 57 39</li>
                    <li><a href="mailto: barbershop@gmail.com" class="text-light text-decoration-none">barbershop@gmail.com</a></li>
                </ul>
            </div>
        </div>
    </div>
</section>

</body>
</html>
